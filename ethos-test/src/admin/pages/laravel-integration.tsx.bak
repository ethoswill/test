import { definePageConfig } from "@medusajs/admin-sdk"
import { useState, useEffect } from "react"

const LaravelIntegration = () => {
  const [syncStatus, setSyncStatus] = useState<string>("Unknown")
  const [lastSync, setLastSync] = useState<string>("Never")
  const [productsCount, setProductsCount] = useState<number>(0)

  useEffect(() => {
    // Fetch sync status from Laravel API
    fetchSyncStatus()
  }, [])

  const fetchSyncStatus = async () => {
    try {
      const response = await fetch('http://localhost:8000/api/medusa/sync-status')
      const data = await response.json()
      setSyncStatus(data.status || "Unknown")
      setLastSync(data.last_sync || "Never")
      setProductsCount(data.products_count || 0)
    } catch (error) {
      console.error("Error fetching sync status:", error)
      setSyncStatus("Error")
    }
  }

  const handleSyncProducts = async () => {
    try {
      setSyncStatus("Syncing...")
      const response = await fetch('http://localhost:8000/api/medusa/sync-products', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      })
      
      if (response.ok) {
        setSyncStatus("Success")
        setLastSync(new Date().toLocaleString())
        fetchSyncStatus() // Refresh the data
      } else {
        setSyncStatus("Failed")
      }
    } catch (error) {
      console.error("Error syncing products:", error)
      setSyncStatus("Error")
    }
  }

  return (
    <div className="p-6">
      <h1 className="text-2xl font-bold mb-4">Laravel Integration</h1>
      
      <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
        {/* Sync Status Card */}
        <div className="bg-white rounded-lg shadow p-6">
          <h2 className="text-lg font-semibold mb-4">Sync Status</h2>
          <div className="space-y-3">
            <div className="flex justify-between">
              <span className="text-gray-600">Status:</span>
              <span className={`px-2 py-1 rounded text-sm ${
                syncStatus === "Success" ? "bg-green-100 text-green-800" :
                syncStatus === "Error" || syncStatus === "Failed" ? "bg-red-100 text-red-800" :
                syncStatus === "Syncing..." ? "bg-yellow-100 text-yellow-800" :
                "bg-gray-100 text-gray-800"
              }`}>
                {syncStatus}
              </span>
            </div>
            <div className="flex justify-between">
              <span className="text-gray-600">Last Sync:</span>
              <span className="text-sm">{lastSync}</span>
            </div>
            <div className="flex justify-between">
              <span className="text-gray-600">Products Count:</span>
              <span className="text-sm font-semibold">{productsCount}</span>
            </div>
          </div>
          <button
            onClick={handleSyncProducts}
            disabled={syncStatus === "Syncing..."}
            className="mt-4 w-full bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 disabled:opacity-50"
          >
            {syncStatus === "Syncing..." ? "Syncing..." : "Sync Products"}
          </button>
        </div>

        {/* Integration Info Card */}
        <div className="bg-white rounded-lg shadow p-6">
          <h2 className="text-lg font-semibold mb-4">Integration Details</h2>
          <div className="space-y-3">
            <div className="flex justify-between">
              <span className="text-gray-600">Laravel URL:</span>
              <span className="text-sm font-mono">http://localhost:8000</span>
            </div>
            <div className="flex justify-between">
              <span className="text-gray-600">Medusa URL:</span>
              <span className="text-sm font-mono">http://localhost:9000</span>
            </div>
            <div className="flex justify-between">
              <span className="text-gray-600">API Status:</span>
              <span className="text-sm text-green-600">Connected</span>
            </div>
          </div>
        </div>

        {/* Quick Actions Card */}
        <div className="bg-white rounded-lg shadow p-6 lg:col-span-2">
          <h2 className="text-lg font-semibold mb-4">Quick Actions</h2>
          <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
            <button
              onClick={() => window.open('http://localhost:8000/admin', '_blank')}
              className="p-4 border border-gray-200 rounded-lg hover:bg-gray-50 text-left"
            >
              <h3 className="font-semibold text-blue-600">Laravel Admin</h3>
              <p className="text-sm text-gray-600">Open Filament admin panel</p>
            </button>
            <button
              onClick={() => window.open('http://localhost:8000/api/medusa/products', '_blank')}
              className="p-4 border border-gray-200 rounded-lg hover:bg-gray-50 text-left"
            >
              <h3 className="font-semibold text-green-600">API Endpoints</h3>
              <p className="text-sm text-gray-600">View API documentation</p>
            </button>
            <button
              onClick={fetchSyncStatus}
              className="p-4 border border-gray-200 rounded-lg hover:bg-gray-50 text-left"
            >
              <h3 className="font-semibold text-purple-600">Refresh Status</h3>
              <p className="text-sm text-gray-600">Update sync information</p>
            </button>
          </div>
        </div>
      </div>
    </div>
  )
}

export const config = definePageConfig({
  label: "Laravel Integration",
  icon: "arrow-path",
})

export default LaravelIntegration
